<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Get_FB_Data">
    <RelativeLayout
        android:id="@+id/lay_top"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            />

        <TextView
            android:id="@+id/txt_title"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Result"
            android:textSize="18sp"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/lay_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:padding="20dp"
            android:background="@color/grey_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Matrix (GS1)"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/txt_barcode"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0999823495209678834252345"
                android:textSize="18sp"
                />

        </LinearLayout>

        <LinearLayout
            android:padding="20dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:textColor="@color/grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCANNED INFORMATION"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:padding="0dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GTIN(01) :"
                android:textSize="18sp"
                android:textStyle="bold"
                />
                <TextView
                    android:id="@+id/txt_gtn"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GTIN(01)"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    />

            </LinearLayout>
            <LinearLayout
                android:padding="0dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BATCH/LOT(10) :"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_batch"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GTIN(01)"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    />

            </LinearLayout>
            <LinearLayout
                android:padding="0dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXPIRY(17) :"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_expiry"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GTIN(01)"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    />

            </LinearLayout>
            <LinearLayout
                android:padding="0dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SERIAL(21) :"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_serial"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GTIN(01)"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    />

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:textColor="@color/grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MASTER DATA"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <LinearLayout
                android:padding="0dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRODUCT :"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_product_name"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GTIN(01)"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    />

            </LinearLayout>
            <LinearLayout
                android:padding="0dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPANY :"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_company"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GTIN(01)"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    />

            </LinearLayout>
            <LinearLayout
                android:padding="0dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUPPLY CHAIN :"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_supply"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/grey_800"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GTIN(01)"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    </ScrollView>

    <com.getbase.floatingactionbutton.FloatingActionsMenu

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:id="@+id/right_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        fab:fab_addButtonColorNormal="@color/blue_600"
        fab:fab_addButtonColorPressed="@color/blue_900"
        fab:fab_addButtonPlusIconColor="@color/white"
        fab:fab_addButtonSize="mini"
        android:layout_gravity="right"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/grey_80"
            fab:fab_title="Screenshot"
            android:id="@+id/fab_screenshot"
            fab:fab_colorPressed="@color/grey_600"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/grey_80"
            fab:fab_size="mini"
            fab:fab_title="Share"
            android:id="@+id/btn_share"
            fab:fab_colorPressed="@color/grey_600"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>